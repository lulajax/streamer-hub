{
  "name": "mca-electron",
  "version": "1.0.0",
  "description": "MCA Multi-Caster Assistant - TikTok Live Stream Tool",
  "main": "dist/main/index.js",
  "author": "MCA Team",
  "license": "MIT",
  "private": true,
  "scripts": {
    "dev": "npm run build:preload && vite",
    "build": "npm run build:main && npm run build:renderer && npm run build:preload",
    "build:main": "tsc -p src/main/tsconfig.json",
    "build:renderer": "vite build",
    "build:preload": "tsc -p src/preload/tsconfig.json",
    "preview": "vite preview",
    "lint": "eslint . --ext .ts,.vue",
    "lint:fix": "eslint . --ext .ts,.vue --fix",
    "build:win": "npm run build && electron-builder --win",
    "build:mac": "npm run build && electron-builder --mac",
    "build:linux": "npm run build && electron-builder --linux",
    "postinstall": "electron-builder install-app-deps"
  },
  "dependencies": {
    "class-variance-authority": "^0.7.0",
    "clsx": "^2.1.0",
    "date-fns": "^3.3.1",
    "lucide-vue-next": "^0.563.0",
    "pinia": "^3.0.4",
    "pinia-plugin-persistedstate": "^4.7.1",
    "puppeteer-core": "^22.0.0",
    "puppeteer-in-electron": "^3.0.0",
    "socket.io-client": "^4.7.4",
    "tailwind-merge": "^2.2.1",
    "tailwindcss-animate": "^1.0.7",
    "tiktok-live-connector": "^1.2.3",
    "vue": "^3.5.27",
    "vue-i18n": "^11.2.8"
  },
  "devDependencies": {
    "@types/node": "^25.2.0",
    "@typescript-eslint/eslint-plugin": "^6.21.0",
    "@typescript-eslint/parser": "^6.21.0",
    "@vitejs/plugin-vue": "^6.0.4",
    "autoprefixer": "^10.4.17",
    "electron": "^40.1.0",
    "electron-builder": "^26.7.0",
    "eslint": "^8.56.0",
    "eslint-plugin-vue": "^9.32.0",
    "postcss": "^8.4.35",
    "tailwindcss": "^3.4.1",
    "typescript": "^5.3.3",
    "vite": "^5.1.3",
    "vite-plugin-electron": "^0.28.2",
    "vite-plugin-electron-renderer": "^0.14.5"
  },
  "build": {
    "appId": "com.mca.app",
    "productName": "MCA",
    "directories": {
      "output": "release"
    },
    "files": [
      "dist/**/*",
      "node_modules/**/*"
    ],
    "mac": {
      "category": "public.app-category.entertainment",
      "target": [
        {
          "target": "dmg",
          "arch": ["x64", "arm64"]
        }
      ]
    },
    "win": {
      "target": [
        {
          "target": "nsis",
          "arch": ["x64"]
        }
      ]
    },
    "linux": {
      "target": [
        {
          "target": "AppImage",
          "arch": ["x64"]
        }
      ]
    }
  },
  "pnpm": {
    "onlyBuiltDependencies": [
      "bufferutil",
      "electron",
      "es5-ext",
      "esbuild",
      "protobufjs",
      "sharp",
      "utf-8-validate"
    ]
  }
}
